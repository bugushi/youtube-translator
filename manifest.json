{
    "name": "YouTube 字幕翻译",
    "version": "1.3",
    "description": "暂停YouTube视频时，自动翻译当前字幕。还可以自动跳广告噢",
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup/popup.html",
        "default_icon": "images/icon48.png"
    },
    "permissions": [
        "https://translate.google.cn/",
        "webNavigation",
        "storage"
    ],
    "externally_connectable": {
        "matches": [
            "http://*.youtube.com/*",
            "https://*.youtube.com/*"
        ],
        "accepts_tls_channel_id": false
    },
    "content_scripts": [
        {
            "matches": [
                "http://*.youtube.com/*",
                "https://*.youtube.com/*"
            ],
            "js": [
                "youtube.js",
                "skipad.js",
                "adv.js"
            ],
            "css": [
                "style.css"
            ]
        }
    ],
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "manifest_version": 2,
    "web_accessible_resources": ["images/front-end-adv.png"]
}